<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_know_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        tools:text = "热门专题"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constrainedWidth="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_know_content"
        app:layout_constraintTop_toBottomOf="@id/tv_know_title"
        app:layout_constraintRight_toLeftOf="@id/iv_get"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        tools:text = "热门专题  热门专题  热门专题  热门专题  热门专题  热门专题  热门专题  热门专题  热门专题  热门专题  热门专题  热门专题"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_get"
        android:layout_width="0dp"
        android:src="@mipmap/go"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:background="@color/white_gray"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_know_content"
        android:layout_height="1dp"/>
</android.support.constraint.ConstraintLayout>